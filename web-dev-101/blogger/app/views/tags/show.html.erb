<h1>Articles Tagged with <%= @tag.name %></h1>
<ul>
  <% @tag.articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article) %>
      <% if logged_in? %>
      <span><%= link_to "(delete)", tag_path(@tag), method: :delete, data: {confirm: "Really delete the tagging?"} %></span>
      <% end %>
    </li>
  <% end %>
</ul>
